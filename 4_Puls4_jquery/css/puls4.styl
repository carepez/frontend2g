naranja = #DD4F24
azul = #22BCE0
gris_texto = #7A7A7A
gris_oscuro = #444
gris_claro = #efefef


@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	transition font-size 1s

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	padding 0.5em
	position relative
	overflow hidden
	z-index 2

	.logo
		width 60px
		float left
		
		img
			width 52px
	
	.titular
		border-left 1px solid azul
		margin 0px 80px 0 70px
		padding 0 0 0 10px

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			&:before
				content "\e600"
				display inline-block
				font-family "iconitos"
				margin-right 5px

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

		.sizer
			text-decoration none

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 1
			img
				border-radius 50%
				width 50px
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0px
			text-align right
			text-decoration none
			top 10px
			width 50%
			z-index 0

			&:after
				content "\e603"
				display block
				font-family "iconitos"
				text-shadow 1px 1px 0px black

nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		left 0
		content ""
		position absolute
		top 0


	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap

		&::-webkit-scrollbar
			display none

		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				&:hover
					background rgba(black,0.1)

form
	padding 0.8em
	display none
	
	label
		display inline-block
		width 60px

.posts
	padding 0.5em
	.post
		background gris_claro
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black,0.5)
		color gris_texto
		float left
		margin-bottom 0.5em

		.descripcion
			column-rule gris_texto
			.detalles
				height 160px
				margin-left 130px
				
				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.3em 0.5em 0 0
				
				.autor
					margin 0.5em 0 0.5em 0

				.tag
					background azul
					border-radius 0.5em
					color white
					font-size 0.8em
					font-weight bold
					padding 0.2em 0.5em
					text-decoration none

				.fecha 
					float right
					margin 0 1em 0 0


			.imagen
				float left
				margin 0 0.2em

				img
					height 160px
					vertical-align middle
					width 120px


		.acciones
			border-top 3px solid azul
			overflow hidden
			padding 0.5em

			.votos
				float left

				.down
				.up
					text-decoration none
					font-family "iconitos"
					vertical-align middle

				.down
					color red
					&:before
						content "\e603"
						

				.up
					color green
					&:before
						content "\e604"
			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 0.5em 0 0
					padding 2px 5px
					text-decoration none

				.estrellita
					text-decoration none
					&:after
						color #FCB92D
						content "\e602"
						display inline-block
						font-family "iconitos"
						vertical-align top

		
footer
	background naranja
	color rgba(white,0.5)
	display inline-block
	margin 0.5em 0
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:after
			&:before
				content " - "

@media screen and (min-width: 768px)
	
	header
		.titular
			.publicar
				font-size 1.1em
				padding-left 3em
				position relative
				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px


	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd) //even
				margin-right 2%